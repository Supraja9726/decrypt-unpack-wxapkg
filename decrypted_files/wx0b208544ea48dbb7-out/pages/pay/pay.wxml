<view class="pay-wrap">
    <view class="hint">
        <view class="hook-icon">
            <image src="./icons/hook-icon.png"></image>
        </view>
        <text>订单已经提交成功!</text>
    </view>
    <view class="info-list">
        <view>
            <text>订单号:{{orderInfo.order_sn}}</text>
        </view>
        <view>
            <text>支付金额:¥{{orderInfo.order_amount}}元</text>
        </view>
        <view>
            <text>支付方式:微信支付</text>
        </view>
    </view>
    <view bindtap="pay" class="btn-default pay-btn">去支付</view>
</view>
