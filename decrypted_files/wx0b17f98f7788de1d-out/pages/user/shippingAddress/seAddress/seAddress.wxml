<view class="ad_popError" wx:if="{{popErrorMsg}}">{{popErrorMsg}}</view>
<view class="xzdz">
    <view class="xzdzBox">
        <view class="xzdzTitle">
            <view class="xzdzC">新增收货地址
        <image class="xzdz_img" src="/images/newAddress.png"></image>
            </view>
        </view>
    </view>
</view>
<view class="nameBox">
    <view class="name">{{saddress}} : </view>
    <view class="nameInput">
        <input bindinput="sraddres" class="cd" maxlength="10" placeholder="请输入收货地址" style="color: #ccc" value="{{addName}}"></input>
    </view>
</view>
<view bindtap="xzAddress" class="sexBox" data-add="{{addressName[index]}}" data-id="{{index}}" data-x="{{coordinate[index]}}" wx:for="{{addressName}}">
    <view class="cityy">{{addressName[index]}}</view>
</view>
