<view class="container">
    <view class="weui-cell weui-cell_access user-avatar">
        <view class="weui-cell__bd">
        头像
      </view>
        <view class="weui-cell__ft avatar-content weui-cell__ft_in-access">
            <image bindtap="previewImage" class="avatar" src="{{userInfo.headImage}}"></image>
        </view>
        <view bindtap="updataHeadImg" class="updata-btn"></view>
    </view>
    <view class="user-info-text">
        <view bindtap="editNickName" class="weui-cell weui-cell_access">
            <view class="weui-cell__bd">
          昵称
        </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
          {{userInfo.nickName}}
        </view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__bd">
          手机号码
        </view>
            <view class="weui-cell__ft">
          {{userInfo.phone}}
        </view>
        </view>
    </view>
    <button bindtap="loginOut" class="btn-dafault appoint">退出登录</button>
</view>
