<view class="container">
    <view style="background: #fff;">
        <navigator class="user-head" url="../commonUserInfo/index">
            <image class="bg-img" src="/images/47@3x.png"></image>
            <view class="user-avatar">
                <image class="fullImg" src="{{userInfo.headImage}}"></image>
            </view>
            <view class="user-info">
                <view class="user-name">{{userInfo.nickName}}</view>
                <view class="user-phone">
                    <image src="/images/mobile@3x.png"></image>
          {{userInfo.phone}}
        </view>
            </view>
            <image class="arror-right" src="/images/white-arror.png"></image>
        </navigator>
        <view class="user-mid">
            <navigator class="nav-item first" url="../myBalance/index">
                <view class="nav-item-num money">
                    <text class="money">{{userInfo.balance}}</text>元
        </view>
                <view class="nav-item-text">余额</view>
            </navigator>
            <navigator class="nav-item" url="../myCoupons/index">
                <view class="nav-item-num coupons">
                    <text class="coupons">{{userInfo.coupons}}</text>张
        </view>
                <view class="nav-item-text">优惠券</view>
            </navigator>
        </view>
    </view>
    <view class="nav-list">
        <navigator class="weui-cell weui-cell_access" url="../myBalance/index">
            <view class="weui-cell__bd">
                <image class="item-icon" src="/images/48@3x.png"></image>
                <text>我的钱包</text>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator class="weui-cell weui-cell_access" url="../news/index">
            <view class="weui-cell__bd">
                <image class="item-icon" src="/images/49@3x.png"></image>
                <text>我的消息</text>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator class="weui-cell weui-cell_access" url="../addressList/index">
            <view class="weui-cell__bd">
                <image class="item-icon" src="/images/50@3x.png"></image>
                <text>地址管理</text>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator class="weui-cell weui-cell_access" url="../sharePolite/index">
            <view class="weui-cell__bd">
                <image class="item-icon" src="/images/51@3x.png"></image>
                <text>分享有礼</text>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
    </view>
    <view class="nav-list">
        <view bindtap="callPhone" class="weui-cell weui-cell_access">
            <view class="weui-cell__bd">
                <image class="item-icon" src="/images/52@3x.png"></image>
                <text>联系客服</text>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access" style="color: #333;">{{userInfo.hotline}}</view>
        </view>
        <navigator class="weui-cell weui-cell_access" url="../aboutUs/index">
            <view class="weui-cell__bd">
                <image class="item-icon" src="/images/53@3x.png"></image>
                <text>关于我们</text>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
    </view>
</view>
