<view style="position: absolute; width: 100%; height: 100%; background:#fff; display: flex; flex-direction: column;">
    <camera binderror="error" bindstop="stop" devicePosition="back" flash="on" style="flex: 1;"></camera>
    <view class="testBlock" style="height: 240rpx;">
        <view class="blockTitle">后置摄像头正常吗？</view>
        <view class="blockContent btns">
            <view bindtap="setResult" class="warn" data-val="1">异常</view>
            <view bindtap="setResult" class="normal" data-val="0">正常</view>
        </view>
    </view>
</view>
