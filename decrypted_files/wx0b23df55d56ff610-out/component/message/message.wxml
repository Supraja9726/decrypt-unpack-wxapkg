<template name="message">
    <view catchtap="stopTap" catchtouchmove="stopTouchMove" class="message-area" hidden="{{message.visiable?false:true}}">
        <view class="message">
            <view class="message-icon">
                <image src="../../../img/{{message.icon}}.png" wx:if="{{!!message.icon}}"></image>
            </view>
            <view class="message-content">{{message.content}}</view>
        </view>
    </view>
</template>
